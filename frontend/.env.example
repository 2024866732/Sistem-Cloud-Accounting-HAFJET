# Frontend Environment Variables

# API Configuration
VITE_API_URL=http://localhost:3000/api

# App Configuration
VITE_APP_NAME=HAFJET Bukku
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Cloud Accounting System Malaysia

# Malaysian Configuration
VITE_DEFAULT_CURRENCY=MYR
VITE_DEFAULT_LANGUAGE=en
VITE_SST_RATE=0.06
VITE_GST_RATE=0.06

# Feature Flags
VITE_ENABLE_EINVOICE=true
VITE_ENABLE_MULTI_CURRENCY=true
VITE_ENABLE_INVENTORY=true
VITE_ENABLE_PAYROLL=false

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=your-ga-id
VITE_SENTRY_DSN=your-sentry-dsn

# Development
VITE_DEBUG=true
VITE_LOG_LEVEL=debug