# HAFJET Bukku Backend Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Database Configuration
MONGO_URI=mongodb://localhost:27017/hafjet-bukku

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Malaysian Tax Settings
SST_RATE=0.06
GST_RATE=0.06

# LHDN E-Invoice Configuration
LHDN_API_BASE_URL=https://api.myinvois.hasil.gov.my
LHDN_API_KEY=your-lhdn-api-key
LHDN_CLIENT_ID=your-lhdn-client-id
LHDN_CLIENT_SECRET=your-lhdn-client-secret
LHDN_ENVIRONMENT=sandbox

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@hafjet-bukku.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Exchange Rate API
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
EXCHANGE_RATE_BASE_URL=https://api.exchangerate-api.com/v4

# WhatsApp Integration
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_API_TOKEN=your-whatsapp-api-token

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30

# --- Digital Shoebox / OCR & AI ---
OCR_PROVIDER=mock
AI_MODEL=rules_v1
ENABLE_RECEIPT_NOTIFICATIONS=true
AUTO_APPROVE_MAX_AMOUNT=200

# --- Queue / Async Processing (future) ---
QUEUE_DRIVER=memory
REDIS_URL=redis://localhost:6379

# --- Telegram Ingestion ---
TELEGRAM_BOT_TOKEN=
TELEGRAM_ALLOWED_CHAT_IDS=
TELEGRAM_WEBHOOK_SECRET=
TELEGRAM_WEBHOOK_RATE_LIMIT=60
TELEGRAM_WEBHOOK_RATE_WINDOW_SEC=60
TELEGRAM_AUTO_OCR=false
TELEGRAM_AUTO_CLASSIFY=false

# --- POS (Loyverse) Integration ---
LOYVERSE_API_KEY=
LOYVERSE_API_URL=https://api.loyverse.com
LOYVERSE_POLL_INTERVAL_SEC=300
LOYVERSE_SYNC_SCHEDULER_ENABLED=false

# --- Metrics & Observability ---
METRICS_PROM_ENABLED=false
POS_SYNC_ERROR_ALERT_THRESHOLD=5

# --- Default Company (for schedulers / defaults) ---
DEFAULT_COMPANY_ID=
 
# Developer testing helper: when set to true the app will skip connecting to MongoDB
# and start the HTTP server immediately. Useful for local smoke tests and CI jobs
# that only need HTTP-level checks. DO NOT enable in production.
# SKIP_DB=true